{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2020",
    "module": "commonjs",
    "lib": ["esnext", "dom"],                     
    "allowJs": true,
    "outDir": "./build",                          
    "rootDir": "./",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@common/*": ["./common/*"],
      "@controller/*": ["./controller/*"],
      "@lib/*": ["./lib/*"],
      "@middleware/*": ["./middleware/*"],
      "@models/*": ["./models/*"],
      "@provider/*": ["./provider/*"],
      "@resource/*": ["./resource/*"],
      "@routes/*": ["./routes/*"],
      "@services/*": ["./services/*"],
    }
  }
}